<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowAnimationStyle">@style/YourAnimation.Activity</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/uni_blue</item>
        <item name="colorPrimaryDark">@color/uni_blue_dark</item>
        <item name="colorAccent">@color/uni_blue_light</item>

        <!-- The rest of your attributes -->
    </style>

    <style name="YourAnimation.Activity" parent="android:Animation.Activity">

    </style>





    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Transparent">

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">

            @android:style/Animation.Translucent

        </item>

        <item name="android:colorForeground">@color/white</item>

    </style>
    <style name="DialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="DialogSlideAnim" >
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">

            @android:style/Animation.Translucent

        </item>

        <item name="android:colorForeground">#111</item>
    </style>
</resources> 

